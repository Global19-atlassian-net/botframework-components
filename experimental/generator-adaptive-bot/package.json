{
  "name": "generator-adaptive-bot",
  "version": "1.0.0-preview.5",
  "description": "Yeoman generator for creating an Adaptive Bot application built on top of the Microsoft Bot Framework SDK and runtime.",
  "files": [
    "generators"
  ],
  "keywords": [
    "microsoft",
    "bot",
    "framework",
    "adaptive",
    "yeoman-generator"
  ],
  "dependencies": {
    "uuid": "^8.3.2",
    "yeoman-generator": "^4.12.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/uuid": "^8.3.0",
    "@types/yeoman-generator": "^4.11.3",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.1.3",
    "yo": "^3.1.1"
  },
  "author": "Bot Framework",
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all build:tsc build:copy",
    "build:copy": "npm-run-all -p build:copy:dotnet build:copy:js",
    "build:copy:dotnet": "shx cp -R src/dotnet/templates generators/dotnet/templates",
    "build:copy:js": "shx cp -R src/js/templates generators/js/templates",
    "build:tsc": "tsc -b",
    "clean": "shx rm -rf my-adaptive-bot generators tsconfig.tsbuildinfo",
    "prepare": "yarn build",
    "test": "npm-run-all clean build yo",
    "yo": "npm-run-all yo:generate yo:build yo:test",
    "yo:build": "cd my-adaptive-bot && yarn links && yarn",
    "yo:test": "cd my-adaptive-bot && yarn watch",
    "yo:generate": "yo adaptive-bot:js my-adaptive-bot"
  }
}
